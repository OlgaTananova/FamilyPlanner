{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/shoppinglist/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "GET:/notifications",
        "Period": "1m",
        "Limit": 50
      }
    ]
  },
  "AllowedHosts": "*",
  "ClientApp": "http://localhost:3000",
  "ReverseProxy": {
    "Routes": {
      "catalogRoute": {
        "ClusterId": "catalogCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/Catalog/{**catch-all}"
          }
        ]
      },
      "shoppingListRoute": {
        "ClusterId": "shoppingListCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/shoppinglist/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/ShoppingLists/{**catch-all}"
          }
        ]
      },
      "notificationRoute": {
        "ClusterId": "notificationCluster",
        "AuthorizationPolicy": "default",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "catalogCluster": {
        "Destinations": {
          "catalog": {
            "Address": "http://catalogservice"
          }
        }
      },
      "shoppingListCluster": {
        "Destinations": {
          "shoppingList": {
            "Address": "http://shoppinglistservice"
          }
        }
      },
      "notificationCluster": {
        "Destinations": {
          "notifications": {
            "Address": "http://notificationservice"
          }
        }
      }
    }
  }
}